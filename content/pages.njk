---
pagination:
  data: pages
  size: 1
  alias: page
permalink: "{%- if page.id !== meta.homepage.id -%}{{ page.title | slugify }}/{%- endif -%}index.html"
section: "page"
layout: layouts/base.njk
---
<article class="{% if page.id == meta.homepage.id %}home{% endif %} {{ section }} {{ page.title | slugify }}">
    {%- for s in page.pageSections-%}
        <section data-layout={{ s.layout }} data-bg-color={% if s.bgColor.hex %}{{ s.bgColor.hex }}{% endif %}>
        {%- for c in s.content -%}
            {% if c.__typename == 'Hero' %}
                <div class="page-hero">
                    <div class="page-hero-content">
                        <div class="page-hero-text">
                            {{ c.text.textmd | md | safe }}
                        </div>
                        <a class="button page-hero-cta" href="{{ c.linkButton.page.title | slugify }}">
                            <img eleventy:ignore class="icon" src="/img/icon-eye.svg" />
                            {{ c.linkButton.title | safe }}
                        </a>
                    </div>
                    <div class="page-hero-image">
                        {% for i in c.image.images %}
                            <img src="{{ i.url }}" alt="{{ i.caption }}" />
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            {% if c.__typename == 'Text' %}
                <div class="text-wrapper">
                    <div class="text">
                    {{ c.textmd | md | safe }}
                    </div>
                </div>
            {% endif %}
            {% if c.__typename == 'LinkButton' %}
                <a class="button" href="{{ c.page.title | slugify }}">
                    <img eleventy:ignore class="icon" src="/img/icon-arrow-right.svg" />
                    {{ c.title | safe }}
                </a>
            {% endif %}
            {% if c.__typename == 'Image' %}
                <div class="image-wrapper">
                    <div class="image">
                        {% for i in c.images %}
                            <img src="{{ i.url }}" alt="{{ i.caption }}" />
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {%- endfor -%}
        </section>
    {%- endfor -%}
    {% if page.id == meta.homepage.id %}
        {% include "components/subscribe.njk" %}
        {# {% include "components/insta-feed.njk" %} #}
    {% endif %}
</article>