{% if l.url %}
    <a class="button" href="{{ l.url }}" rel="noopener noreferrer" target="_blank">
{% endif %}
{% if l.destination.__typename == 'Page' %}
    <a class="button" href="/{{ l.destination.pageTitle | slugify }}" {% if l.destination.pageTitle == page.title %} aria-current="page"{% endif %}>
{% endif %}
{% if l.destination.__typename == 'Timeline' %}
    <a class="button" href="/{{ l.destination.timelineTitle | slugify }}" {% if l.destination.timelineTitle == timeline.title %} aria-current="page"{% endif %}>
{% endif %}
{% if l.destination.__typename == 'Event' %}
    <a class="button" href="/{{ l.destination.eventTitle | slugify }}" {% if l.destination.eventTitle == event.title %} aria-current="page"{% endif %}>
{% endif %}
{% if icon !== null %}
    <img eleventy:ignore class="icon" src="/img/{{ icon }}.svg" />
{% endif %}
{{ l.title | safe }}</a>