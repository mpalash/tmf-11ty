<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		{% include "components/head-seo.njk" %}
		<script src="https://cdn.jsdelivr.net/npm/lenis@1.3.17/dist/lenis.min.js"></script>
		<link href="https://cdn.jsdelivr.net/npm/lenis@1.3.17/dist/lenis.min.css" rel="stylesheet">
	</head>
	<body>
		<a href="#skip" class="visually-hidden">Skip to main content</a>

		{% include "components/banner.njk" %}
		{% include "components/header.njk" %}

		<main id="skip">
			{{ content | safe }}
			{# {% include "components/test-markup.njk" %} #}
		</main>

		{% include "components/footer.njk" %}

		<!-- This page `{{ page.url | htmlBaseUrl }}` was built on {% currentBuildDate %} -->
		<script type="module" src="{% getBundleFileUrl "js" %}"></script>
	</body>
	<script src="https://cdn.jsdelivr.net/npm/gsap@3.14.1/dist/gsap.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/gsap@3.14.1/dist/ScrollTrigger.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/gsap@3.14.1/dist/SplitText.min.js"></script>
	<script src="/js/smoothScroll.js"></script>
	<script src="/js/bgColorTransitionSmooth.js"></script>
	<script src="/js/headingAnimations-v2.js"></script>
	<script src="/js/pageTransitions.js"></script>
	<script src="/js/imgFadeIn.js"></script>
	<script src="/js/columnScrollAnimation.js"></script>

	{% if page.url == '/search/' %}
		<script>
			const searchIndexPromise = fetch('/search-index.json')
				.then(response => response.json());
		</script>
	{% endif %}
</html>